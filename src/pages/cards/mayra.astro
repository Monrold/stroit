        class="bg-zinc-900 text-white h-screen flex items-center justify-center"
    >
        <main class="relative max-w-md w-full mx-auto">
            <!-- Foto de fondo -->
            <div
                class="relative h-screen md:h-96 md: rounded-t-lg bg-cover bg-center overflow-hidden"
                style="background-image: url('https://pub-81aca52011284a96b910aedeefde00fe.r2.dev/may-prueba.jpg');"
            >
                <!-- Degradado -->
                <div
                    class="absolute inset-0 bg-gradient-to-t from-zinc-900/100 to-transparent"
                >
                </div>

                <!-- Elementos Absolutos -->
                <div class="absolute bottom-6 left-6">
                    <img
                        src={logo.src}
                        alt="Logotipo Stroit"
                        class="w-36 mb-6"
                    />
                    <h1 class="text-xl font-light">Mayra Ortega</h1>
                    <p class="font-thin text-xs">Asesora comercial CDMX</p>
