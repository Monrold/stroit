---
import logo from "../images/logo-stroit-white.svg";
import somnia from "../images/somnia.avif";
import dekton from "../images/dekton-logo.png";
import sensa from "../images/sensa/Logo-Sensa-complete.svg";
import silestone from "../images/silestone-logo.svg";
---

<script>
    window.addEventListener("DOMContentLoaded", function () {
        let button = document.getElementById("button");
        let contain = document.getElementById("contain");
        let angle = document.getElementById("angle");

        button.addEventListener("click", function () {
            contain.classList.toggle("show");
            angle.classList.toggle("rotate");
        });

        document.addEventListener("click", function (event) {
            const target = event.target as Node;

            if (target) {
                if (!button.contains(target) && !contain.contains(target)) {
                    contain.classList.remove("show");
                    angle.classList.remove("rotate");
                }
            }
        });

        let burgerButton = document.getElementById("burger-button");
        let burgerContain = document.getElementById("burger-contain");
        let burgerAngle = document.getElementById("burger-angle");

        burgerButton.addEventListener("click", function () {
            burgerContain.classList.toggle("burger-show");
            burgerAngle.classList.toggle("burger-rotate");
        });

        let hamburgerButton = document.getElementById("hamburgerButton");
        let closeIcon = document.getElementById("closeIcon");
        let burgerIcon = document.getElementById("buergerIcon");
        let menuItems = document.getElementById("menuItems");

        function burger() {
            if (menuItems.classList.contains("showMenu")) {
                menuItems.classList.remove("showMenu");
                closeIcon.style.display = "none";
                burgerIcon.style.display = "block";
            } else {
                menuItems.classList.add("showMenu");
                closeIcon.style.display = "block";
                burgerIcon.style.display = "none";
            }
        }

        hamburgerButton.addEventListener("click", burger);
    });
</script>
<style>
    .burger-contain {
        display: none;
        position: relative;
        margin-top: 10px;
        left: 0;
        background: black;
        z-index: 1;
    }
    .wrapper {
        position: relative;
    }

    .contain {
        display: none;
        position: absolute;
        margin-top: 33px;
        background: black;
        right: 0;
        z-index: 1;
    }
    .show {
        display: flex;
    }
    .burger-show {
        display: block;
    }
    .burger-rotate {
        transform: rotate(180deg);
        transition: transform 0.2s ease-in-out;
    }
    .rotate {
        transform: rotate(180deg);
        transition: transform 0.2s ease-in-out;
    }
    .optionli {
        padding: 10px 30px;
        text-align: left;
    }
    .optionli:hover {
        background: rgb(31 41 55);
    }
    .catalogo {
        border: 1px solid #dbd6ca;
        border-radius: 4px;
        padding: 8px 18px;
        color: #dbd6ca;
        text-align: center;
    }
    .catalogo:hover {
        background-color: #dbd6ca;
        color: black;
        transition: all;
        transition-duration: 300ms;
    }
    .principalli:hover {
        color: rgb(229 231 235);
    }
    /*Burger menú*/
    .closeIcon {
        display: none;
    }
    .menuItems {
        position: absolute;
        transform: translateX(-100%);
        transition:
            0.2s ease-in-out,
            opacity 0.3s ease-in-out,
            filter 0.3s ease-in-out;
        opacity: 0;
        top: 0;
        left: 0;
        right: 0;
        z-index: 5;
        background-color: black;
        margin-top: 75px;
        padding-bottom: 15px;
    }
    .showMenu {
        transform: translateX(0px);
        opacity: 1;
    }
</style>
<!--Menú desktop -->
