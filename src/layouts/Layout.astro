---
interface Props {
	title: string;
	description: string;
	ogImage?: string;
	lightColor?: boolean;
	pageviewData?: Record<string, any>;
	isIndexable?: boolean;
}

// destructuring v√°lido con valor por defecto
const { title, description, ogImage, pageviewData = {} }: Props = Astro.props;
import Nav from "../components/nav.astro";
import Footer from "../components/footer.astro";
import Posthog from "../components/posthog.astro";
import Google from "../components/google.astro";
import Pageview from "../components/events-meta/pageview.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link
			rel="icon"
			href="/favicon-32x32.png"
			sizes="32x32"
			type="image/png"
		/>
		<link
			rel="icon"
			href="/favicon-16x16.png"
			sizes="16x16"
			type="image/png"
		/>
		<meta
			property="og:image"
			content={ogImage ??
				"https://pub-81aca52011284a96b910aedeefde00fe.r2.dev/og-image%20copia.webp"}
		/>

		<title>{title}</title>
		<Posthog />
		<Google />
		<Pageview eventName="PageView" customData={pageviewData} />
		<!-- Meta Pixel Code -->
		<script type="module">
			!(function (f, b, e, v, n, t, s) {
				if (f.fbq) return;
				n = f.fbq = function () {
					n.callMethod
						? n.callMethod.apply(n, arguments)
						: n.queue.push(arguments);
				};
				if (!f._fbq) f._fbq = n;
				n.push = n;
				n.loaded = !0;
				n.version = "2.0";
				n.queue = [];
				t = b.createElement(e);
				t.async = !0;
				t.src = v;
				s = b.getElementsByTagName(e)[0];
				s.parentNode.insertBefore(t, s);
			})(
				window,
				document,
				"script",
				"https://connect.facebook.net/en_US/fbevents.js",
			);
			fbq("init", "2414437608907873");
			fbq("track", "PageView");
		</script>
		<noscript
			><img
				height="1"
				width="1"
				style="display:none"
				src="https://www.facebook.com/tr?id=2414437608907873&ev=PageView&noscript=1"
			/></noscript
		>
		<!-- End Meta Pixel Code -->
	</head>
	<body class="bg-zinc-800">
		<Nav />
		<slot />
		<Footer />
	</body>
</html>
